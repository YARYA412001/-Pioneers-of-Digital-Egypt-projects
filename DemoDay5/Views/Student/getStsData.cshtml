@model List<StudentDataWithMsgWithTempViewModel>
@{
    ViewData["Title"] = "getStsData";
}

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Manager</th>
            <th>deptName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.stdName</td>
                <td>@item.deptName</td>
                <td>@item.MangerName</td>
                <td>@item.deptName</td>

                <td>
                    <a asp-action="editSts" asp-controller="Student" asp-route-id="@item.id" class="btn btn-sm btn-info">Edit</a>
                    <a asp-action="Remove" asp-controller="Student" asp-route-id="@item.id" class="btn btn-sm btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="NewStudent" asp-controller="Student">New</a> 
